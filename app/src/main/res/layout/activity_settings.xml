<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:background="@drawable/top_curved_white_box">

    <RelativeLayout
        android:id="@+id/top_nav"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@android:color/black"
            android:id="@+id/back_btn"
            android:src="@drawable/back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:text="SETTINGS"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:layout_below="@+id/top_nav"
        android:padding="12dp"
        android:id="@+id/filters_title"
        android:textSize="16sp"
        android:text="FILTERS"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:id="@+id/filters_layout"
        android:layout_below="@+id/filters_title"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:text="Year"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/seekbar_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>


        <RelativeLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:text="Include R (Adult) rated movies"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/adult_switch"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:text="Yearly facts"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/quotes_switch"
                android:checked="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:text="Enable video autoplay"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/autoplay_video_switch"
                android:checked="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout
            android:padding="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:text="Enable vibration"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vibration_switch"
                android:checked="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/filters_layout"
        android:padding="12dp"
        android:id="@+id/help_title"
        android:textSize="16sp"
        android:text="GET HELP"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:padding="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/help_layout"
        android:layout_below="@+id/help_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="Contact Us"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:tint="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_right"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:padding="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/about_me"
        android:layout_below="@+id/help_layout"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="About Me"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:tint="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_right"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </RelativeLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:paddingBottom="10dp"
        android:layout_below="@+id/about_me"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:elevation="8dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/curved_button_background"
            android:textSize="16sp"
            android:id="@+id/save_exit_btn"
            android:textAllCaps="false"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>

        <Button
            android:elevation="8dp"
            android:textAllCaps="false"
            android:background="@drawable/curved_button_background"
            android:textSize="16sp"
            android:id="@+id/default_btn"
            android:text="Reset"
            android:layout_toRightOf="@+id/save_exit_btn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>
    </LinearLayout>

</RelativeLayout>